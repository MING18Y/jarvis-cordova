<?xml version='1.0' encoding='utf-8'?>
<widget id="com.jarvismedical" version="1.0.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>佳沃思</name>
    <description>
        佳沃思进销存系统
    </description>
    <icon src="icons/icon.png" />
    <splash src="jvs-splash.png" />
    <preference name="phonegap-version" value="cli-8.0.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="CRIInjectFirstFiles" value="www/js/init.js" />
    <preference name="target-device" value="handset" />
    <content src="https://matpre.jwsmed.com" />
    <access origin="*" />
    <allow-navigation href="http://*.jwsmed.com/*" />
    <allow-navigation href="https://*.jwsmed.com/*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="40" src="icons/icon-40.png" width="40" />
        <icon height="76" src="icons/icon-76.png" width="76" />
        <icon height="80" src="icons/icon-80.png" width="80" />
        <icon height="120" src="icons/icon-120.png" width="120" />
        <icon height="152" src="icons/icon-152.png" width="152" />
        <icon height="1024" src="icons/icon-1024.png" width="1024" />
    </platform>
    <config-file parent="NSCameraUsageDescription" target="*-Info.plist">
        <string>申请使用摄像头权限，用于扫码收货等功能</string>
    </config-file>
    <config-file parent="NSPhotoLibraryUsageDescription" target="*-Info.plist">
        <string>申请使用相册权限，用于提交库存报损</string>
    </config-file>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-statusbar" spec="^2.4.2" />
    <plugin name="cordova-plugin-whitelist" spec="^1.3.3" />
    <plugin name="cordova-plugin-inappbrowser-wkwebview" spec="^1.0.7" />
    <plugin name="cordova-plugin-wkwebview-engine" spec="^1.1.4" />
    <plugin name="cordova-plugin-remote-injection" spec="^0.5.2" />
    <plugin name="cordova-plugin-camera" spec="^4.0.3" />
    <plugin name="phonegap-plugin-barcodescanner" spec="^8.0.0">
        <variable name="ANDROID_SUPPORT_V4_VERSION" value="27.+" />
    </plugin>
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="~4.5.5" />
</widget>
